<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ayudaapp">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AyudaApp">
        <activity
            android:name=".covid_case_activity"
            android:label="Covid Case" />
        <activity android:name=".TestNewsActivity" />
        <activity android:name=".FamilyMainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LogIn"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SplashActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".admin_news_announcements"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".admin_family_checklist"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".admin_historylog"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".admin_covid_case"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".admin_donate_ayuda"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".admin_verify_ayuda"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>